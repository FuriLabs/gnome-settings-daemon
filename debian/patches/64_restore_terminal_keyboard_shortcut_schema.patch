diff --git a/plugins/media-keys/gsd-media-keys-manager.c b/plugins/media-keys/gsd-media-keys-manager.c
index fd6a5ec..c702a50 100644
--- a/plugins/media-keys/gsd-media-keys-manager.c
+++ b/plugins/media-keys/gsd-media-keys-manager.c
@@ -981,6 +981,22 @@ gnome_session_shutdown_cb (GObject *source_object,
         }
 }
 
+static void
+do_terminal_action (GsdMediaKeysManager *manager)
+{
+        GSettings *settings;
+        char *term;
+
+        settings = g_settings_new ("org.gnome.desktop.default-applications.terminal");
+        term = g_settings_get_string (settings, "exec");
+
+        if (term)
+        execute (manager, term, FALSE);
+
+        g_free (term);
+        g_object_unref (settings);
+}
+
 static void
 gnome_session_shutdown (GsdMediaKeysManager *manager)
 {
@@ -2502,6 +2518,9 @@ do_action (GsdMediaKeysManager *manager,
         case SCREENCAST_KEY:
                 do_screencast_action (manager);
                 break;
+        case TERMINAL_KEY:
+                do_terminal_action (manager);
+                break;
         case WWW_KEY:
                 do_url_action (manager, "http", timestamp);
                 break;
